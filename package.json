{
  "name": "jquery-class",
  "version": "1.0.0",
  "description": "Добавляет в jQuery ООП.",
  "main": "gulpfile.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "compress": "mkdir -p ./dist && uglifyjs src/*.js -m -o ./dist/jquery.class.min.js",
    "docs": "mkdir -p ./docs && jsdoc -r ./src -d ./docs -t ./node_modules/docdash --readme ./README.md",
    "build": "npm run compress && npm run docs",
    "test": "php -S localhost:8000",
    "docs_view": "php -S localhost:8000 -t ./docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gleb-mihalkov/jquery-class.git"
  },
  "keywords": [
    "jquery"
  ],
  "author": "gleb-mihalkov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gleb-mihalkov/jquery-class/issues"
  },
  "homepage": "https://github.com/gleb-mihalkov/jquery-class#readme",
  "devDependencies": {
    "docdash": "^0.4.0",
    "jsdoc": "^3.5.3",
    "uglify-js": "^3.0.27"
  }
}
